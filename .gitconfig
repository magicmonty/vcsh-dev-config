[user]
	email = magicmonty@pagansoft.de
	name = Martin Gondermann
[core]
	excludesfile = /Users/martingondermann/.gitignore_global
	editor = /usr/local/bin/vim

[difftool "sourcetree"]
	cmd = /Users/martingondermann/bin/bcomp \"$LOCAL\" \"$REMOTE\"
	path = -ro

[mergetool "sourcetree"]
	cmd = /Users/martingondermann/bin/bcomp \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
	trustExitCode = true

[difftool "bc3"]
  cmd = /usr/local/bin/bcomp \"$LOCAL\" \"$REMOTE\"
  trustExitCode = true

[mergetool "bc3"]
  cmd = /usr/local/bin/bcomp \"$LOCAL\" \"$REMOTE\" \"$BASE\" \"$MERGED\"
  trustExitCode = true

[credential]
	helper = osxkeychain

[push]
	default = current

[diff]
	tool = bc3

[merge]
  tool = bc3

[hub]
protocol = https

[alias]
co = checkout
br = branch
who = shortlog -s --
df = diff
st = status
ci = commit
lg = log -p
hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
type = cat-file -t
dump = cat-file -p
	stu = status --untracked-files=no

